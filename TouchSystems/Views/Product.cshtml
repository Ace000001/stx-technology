    /* 2022-12-01 David added*/
    productdescription = productdescription.ToString().Substring(Model.ModelNumber.ToString().Length, (productdescription.ToString().Length - Model.ModelNumber.ToString().Length));


    if (httpContext != null && !string.IsNullOrEmpty(httpContext.Request.Query["size"]))
    {
        string sskey = httpContext.Request.Query["size"];
        if (!string.IsNullOrEmpty(sskey))
        {
            //  var ssobj = ssobjlist.Children().Where(x => x.IsVisible() && x.Value("screenSizeInch").ToString() == sskey.Replace("inch", "")).FirstOrDefault();
            var ssobj = ssobjlist.Children().Where(x => x.IsVisible() && x.Name.ToString().ToLower() == sskey.ToLower()).FirstOrDefault();
            if (ssobj != null)
            {

                sizeselected = true;
                screensize = ssobj.Value("screenSizeInch").ToString() + " inch";
                actualscreensize = ssobj.Value("screenSizeInch").ToString();
                screenno = ssobj.Value("screenSizeNumber").ToString();
                partno = ssobj.Value("partNumber").ToString();
                screenreso = ssobj.Value("screenResolution") + " (" + ssobj.Value("aspectRatio") + ")";
                displayinfo = ssobj.Value("displayInfo").ToString();
                aspectratio = ssobj.Value("aspectRatio").ToString();

                if (aspectratio == "4:3" || aspectratio == "5:4")
                {
                    iscreentype = "Standard";
                }
                else
                {
                    iscreentype = "Widescreen";
                }
                //update modelno
                if (Model.ModelNumber.ToString().Contains("-"))
                {
                    string[] mn = new string[] { };
                    mn = Model.ModelNumber.ToString().Split('-');
                    modelno = mn[0].Remove(mn[0].Length - 2) + partno + "-" + mn[1];
                }
                else
                {
                    modelno = Model.ModelNumber.ToString().Remove(Model.ModelNumber.ToString().Length - 2) + partno;
                }
                //end

            }
        }

    }

    var herobackground = "";
    if (Model.Value("heroBackground") != null)
    {
        if (Model.Value<IPublishedContent>("heroBackground") != null)
        {
            herobackground = Model.Value<IPublishedContent>("heroBackground").Url();
